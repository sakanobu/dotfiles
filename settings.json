{
    "editor.cursorSurroundingLines": 2,
    "editor.formatOnSave": false,
    "editor.linkedEditing": true,
    "editor.suggestSelection": "first",
    "editor.tabSize": 2,
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "files.encoding": "utf8",
    "files.insertFinalNewline": false,
    "git.autofetch": true,
    "git.suggestSmartCommit": false,
    "terminal.integrated.defaultProfile.linux": "/bin/bash",
    "terminal.integrated.defaultProfile.osx": "/bin/bash",
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "/Users/tyobi0913/programming_practice/.vimrc",
    "vim.surround": true,
    "workbench.colorTheme": "Monokai",
    "workbench.colorCustomizations": {
        "[Monokai]": {
            "terminal.ansiBlack": "#f8f2f2"
        }
    },
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "newUntitledFile",
    // 各言語
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.quickSuggestions": false,
        "editor.tabSize": 4,
        "editor.wordWrap": "on"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
    },
    "[shellscript]": {
        // "editor.defaultFormatter": "shakram02.bash-beautify"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "html.format.extraLiners": "",
    "html.format.indentInnerHtml": true,
    "html.format.maxPreserveNewLines": 1,
    "html.format.wrapAttributes": "force-expand-multiline",
    "html.format.wrapLineLength": 80,
    "[typescript]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true
        },
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnPaste": true
    },
    "typescript.format.placeOpenBraceOnNewLineForFunctions": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[typescriptreact]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true
        },
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnPaste": true
    },
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.tabSize": 4,
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.formatOnType": false
    },
    "python.analysis.typeCheckingMode": "strict",
    "python.defaultInterpreterPath": "/usr/local/bin/python3.9",
    "python.formatting.provider": "black",
    "python.jediEnabled": false,
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.maxNumberOfProblems": 100,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E203,W503,W504",
        "--max-complexity=20"
    ],
    "[ruby]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true
    },
    "ruby.format": "prettier",
    "ruby.lint": {
        "rubocop": true
    },
    // 拡張機能
    "auto-rename-tag.activationOnLanguage": [
        "*"
    ],
    "eslint.packageManager": "yarn",
    "kite.showWelcomeNotificationOnStartup": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.CustomBrowser": "chrome",
    "markdownlint.config": {
        "MD030": {
            "ol_multi": 1,
            "ol_single": 1,
            "ul_multi": 1,
            "ul_single": 1
        },
        "MD041": false
    },
    "tabnine.experimentalAutoImports": true,
    "todo-tree.tree.showScanModeButton": false,
    "vsicons.dontShowNewVersionMessage": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "window.zoomLevel": -1,
    // 未分類
}